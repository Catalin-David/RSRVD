<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/darker_gray</item>

        <item name="colorSecondary">@android:color/white</item>
        <item name="colorSecondaryVariant">@color/gray</item>

        <item name="colorSurface">@color/dark_gray</item>
        <item name="colorOnSurface">@color/light_gray</item>

        <item name="colorOnBackground">@color/light_gray</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@android:color/white</item>

        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@color/dark_gray</item>

        <item name="textAppearanceHeadline2">@style/TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Body2</item>

        <item name="materialButtonStyle">@style/MaterialComponents.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Button.Outlined</item>

        <item name="snackbarStyle">@style/RSRVD.Snackbar</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
    </style>

    <style name="MaterialComponents.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/darker_gray</item>
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance</item>
    </style>

    <style name="MaterialComponents.Button.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/darker_gray</item>
        <item name="iconTint">@android:color/black</item>
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/light_gray</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="ButtonAppearance">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald_bold</item>
    </style>

    <style name="TextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Subtitle1.Bold" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald_bold</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald_light</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald_light</item>
    </style>

    <style name="RSRVD.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:textColor">#fff</item>
        <item name="backgroundColor">#fc000000</item>
    </style>

    <style name="DatePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/darker_gray</item>
        <item name="colorAccent">@color/primary</item>
    </style>
</resources>
