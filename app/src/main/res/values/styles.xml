<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorPrimaryDark">@color/darkGray</item>
        <item name="colorOnPrimary">@color/darkerGray</item>

        <item name="colorSecondary">@android:color/white</item>
        <item name="colorSecondaryVariant">@color/gray</item>

        <item name="colorSurface">@color/darkGray</item>
        <item name="colorOnSurface">@color/lightGray</item>

        <item name="colorOnBackground">@color/lightGray</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@android:color/white</item>

        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@color/darkGray</item>

        <item name="textAppearanceHeadline2">@style/TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Headline3.White</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Headline4.White</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1.White</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Body2</item>
    </style>

    <style name="MaterialComponents.TextButton.Small" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1.DarkGray</item>
    </style>

    <style name="MaterialComponents.TextButton.Big" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1.DarkerGray</item>
        <item name="android:paddingTop">@dimen/long_padding</item>
        <item name="android:paddingBottom">@dimen/long_padding</item>
    </style>

    <style name="MaterialComponents.TextButton.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textAppearance">@style/TextAppearance.Body1.DarkerGray</item>
        <item name="iconTint">@android:color/black</item>
        <item name="android:paddingTop">@dimen/long_padding</item>
        <item name="android:paddingBottom">@dimen/long_padding</item>
    </style>

    <style name="TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald_bold</item>
    </style>

    <style name="TextAppearance.Headline3.Gray" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Headline3.White" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Headline4.White" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Headline4.LightGray" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/lightGray</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Headline4.Gray" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Headline4.DarkGray" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/darkGray</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.Subtitle1.Bold" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald_bold</item>
    </style>

    <style name="TextAppearance.Body1.White" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald_light</item>
    </style>

    <style name="TextAppearance.Body1.LightGray" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/lightGray</item>
        <item name="fontFamily">@font/oswald_light</item>
    </style>

    <style name="TextAppearance.Body1.DarkGray" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/darkGray</item>
        <item name="fontFamily">@font/oswald_light</item>
    </style>

    <style name="TextAppearance.Body1.DarkerGray" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/darkerGray</item>
        <item name="fontFamily">@font/oswald_light</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/oswald_light</item>
    </style>

</resources>
