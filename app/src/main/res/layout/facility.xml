<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/venue_facility_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_parking"
        android:background="@drawable/square_background"
        android:padding="@dimen/long_padding"
        android:layout_marginTop="@dimen/short_margin"
        android:layout_marginEnd="@dimen/short_margin"
        android:layout_marginStart="@dimen/short_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/parking" />

    <TextView
        android:id="@+id/venue_facility_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parking"
        android:textAppearance="?attr/textAppearanceOverline"
        android:textColor="@android:color/white"
        android:fontFamily="@font/oswald"
        android:layout_marginStart="@dimen/short_margin"
        app:layout_constraintTop_toBottomOf="@id/venue_facility_image"
        app:layout_constraintStart_toStartOf="parent"/>
</merge>